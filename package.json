{
  "type": "module",
  "name": "@netisu/chimera",
  "version": "1.2.7",
  "description": "Use your AdonisJS named routes in your inertia frontend.",
  "main": "build/index.js",
  "files": [
    "build/commands",
    "build/stubs",
    "build/configure.js",
    "build/provider.js",
    "build/index.js",
    "build/index.d.ts"
  ],
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "build": "bun run clean && tsc",
    "postbuild": "bun run copy:templates && bun run index:commands",
    "index:commands": "adonis-kit index build/commands",
    "prepublishOnly": "bun run build"
  },
  "exports": {
    ".": "./build/index.js",
    "./commands": "./build/commands/main.js"
  },
  "keywords": [
    "adonisjs",
    "routing",
    "frontend",
    "ziggy"
  ],
  "author": "Aeo Zatoichi Bax",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/core": "^6.19.0",
    "@adonisjs/eslint-config": "^2.1.2",
    "@adonisjs/prettier-config": "^1.4.5",
    "@adonisjs/tsconfig": "^1.4.1",
    "@japa/assert": "^4.1.1",
    "@japa/runner": "^4.4.0",
    "@types/node": "^24.3.0",
    "copyfiles": "^2.4.1",
    "del-cli": "^6.0.0",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.0.0"
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/netisu/chimera.git"
  }
}
